<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#70000000"
    android:orientation="vertical"
    android:paddingTop="20dp"
    tools:context=".ui.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/poppins"
        android:text="MusicMatch"
        android:textColor="#FF0084"
        android:textSize="40dp" />


    <Button
        android:id="@+id/buttontoptenartists"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="100dp"
        android:layout_marginTop="400dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="21dp"
        android:background="#FF25B6"
        android:fontFamily="@font/poppins"
        android:text="Top 10 songs"
        android:textColor="#F3000000"
        android:textSize="15dp" />

    <Button
        android:id="@+id/implicitintentbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/artistEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="480dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="29dp"
        android:background="#FF25B6"
        android:fontFamily="@font/poppins"
        android:onClick="onLaunchWebPagebuttonClicked"
        android:text="Get Api Info"
        android:textColor="#F3000000"
        android:textSize="15dp" />
    <Button
        android:id="@+id/savedSongbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/artistEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="560dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="29dp"
        android:background="#FF25B6"
        android:fontFamily="@font/poppins"
        android:text="Saved Tracks"
        android:textColor="#F3000000"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/artistEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttontoptenartists"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="100dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="-360dp"
        android:background="#D3F8F8"
        android:hint="Artist Name"
        android:padding="5dp" />


</RelativeLayout>