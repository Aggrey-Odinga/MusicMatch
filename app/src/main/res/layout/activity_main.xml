<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:paddingTop="20dp"
    tools:context=".ui.MainActivity">


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/background" />

    <Button
        android:id="@+id/implicitintentbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/artistEditText"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="165dp"
        android:layout_marginEnd="164dp"
        android:layout_marginBottom="29dp"
        android:background="#FF25B6"
        android:fontFamily="@font/poppins"
        android:onClick="onLaunchWebPagebuttonClicked"
        android:text="Get Info On Api"
        android:textColor="#F3000000"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="35dp"
        android:fontFamily="@font/poppins"
        android:text="MusicMatch"
        android:textColor="#FF0084"
        android:textSize="40dp" />


    <EditText
        android:id="@+id/artistEditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttontoptenartists"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp"
        android:background="#D3F8F8"
        android:hint="Artist Name"
        android:padding="5dp" />

    <Button
        android:id="@+id/buttontoptenartists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="#FF25B6"
        android:fontFamily="@font/poppins"
        android:text="List of Top 10 songs by an Artists"
        android:textColor="#F3000000"
        android:textSize="15dp" />


</RelativeLayout>